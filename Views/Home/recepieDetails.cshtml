@{
    Layout = "_MainLayout";
}

@model SolomonCookBook.Models.Recepies

<script>
    function ff(){
        x = document.getElementById("aa");
        if (x.style.color == "black")
        {
            x.style.color = "red";
        }
        else{
            x.style.color = "black";
        }
    }
</script>





<div class="recepie-div1 container  " style="min-height:100px;">
    <h1 style="color:yellow;">Biryani</h1>
</div>
<br/>   
<div class="row container">
    <div class="col-md-6">
        <img src="/@Model.image_url" width="100%"/>
        <div style="text-align:right;">
            <a  onclick="ff()">
                <i class="fa fa-heart like" id="axx" style="color:black;"></i>
            </a>
        </div>
    </div>
    <div class="col-md-6">
        <h1>@Model.Recepie_Name</h1>
        <div>
            <h2>Explore Categories</h2>
            <ul>
                <li>Africans</li>
                <li>Indian</li>
                <li>Canadian</li>
                <li>Americans</li>
            </ul>
        </div>
        <div>
            <h2>Subscribe</h2>
            <p>
                Subscribe to our news letter sfor latest updates
            </p>
            <input type="search"  class="inp-search"/>
            <i class="fa fa-paper-plane" style="color:yellow; background:black; background-size:50px 20px;"></i>
        </div>
    </div>
</div>
<br/>

<div>
    <h3>
        Ingredients
    </h3>
    <ul>
        @foreach(string ingredient in @Model.Ingredients.Split(",")){
            <li>@ingredient</li>
        }
    </ul> 
</div>

<br/>


@foreach (var item in Enumerable.Range(1,3))
{
    <div class="row">
        <h2>
            Step @item
        </h2>
        <div class="col-md-3">
            <img  src="/@Model.image_url" width=100%/>
        </div>
        <div class="col-md-6">
            <h3>
                Preparation
            </h3>
            <p>
                In publishing and graphic design, Lorem ipsum is a placeholder text commonly used to 
                demonstrate the visual form of a document or a typeface without relying on meaningful content. 
                Lorem ipsum may be used as a placeholder before final copy is available.
            </p>
        </div>
    </div>
}

<div class="row">
    <h3>
        Similar recepies
    </h3>
    <div class="col-md-6">
        <div class="col-md-3" style="display: inline-block;">
            <img src = "/@Model.image_url" width="100%"/>
        </div>
        <div class="col-md-3" style="display: inline-block;">
            <img src = "/@Model.image_url" width="100%"/>
        </div>
    </div>
</div>

@* Leave a reply section *@

<div class="w-50 mt-5 mb-5">
    <h2>Leave a reply</h2>
    <form>
        <input type="text" class="form-control" /><br/>
        <input type="text" class="form-control"/><br/>
        <textarea class="form-control" style="min-height:150px;">Enter your comment here</textarea><br/>
        <input type="submit" class="btn btn2"/>
    </form>
</div>

